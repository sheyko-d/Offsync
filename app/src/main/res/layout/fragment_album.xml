<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <ScrollView
        android:id="@+id/album_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/preview_bottom_gradient"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TextView
                android:id="@+id/album_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="@dimen/txt_extra_spacing"
                android:paddingTop="24dp"
                android:shadowColor="@android:color/black"
                android:shadowRadius="2"
                android:textColor="@color/white"
                android:textSize="@dimen/post_secondary_txt_size"
                android:visibility="gone"
                tools:text="A Student and Teacher Guarding The High School In My Hometown In 1973. There Was A Shooting Threat Called In The Morning. Students and Teachers Alike Pulled Their Shotguns From Their Trunks To Guard The Doors Between Classes." />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/preview_bottom_gradient" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>